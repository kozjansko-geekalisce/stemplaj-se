<%- include(`${partials}/header`, { hideNavbar: true }) -%>

<form method="POST" class="is-flex is-justify-content-center is-align-items-center">
  <div class="card login-card">
    <div class="card-content">
      <div class="content">
        <div class="field">
          <label class="label">E-mail naslov</label>
          <div class="control">
            <input
              class="input"
              type="text"
              name="email"
              placeholder="polda@stemplaj.se"
              required
            />
          </div>
        </div>

        <div class="field">
          <label class="label">Geslo</label>
          <div class="control">
            <input
              class="input"
              type="password"
              placeholder="hunter2"
              required
              name="password"
            />
          </div>
        </div>

        <div class="field has-text-right mt-5">
          <div class="control">
            <button class="button is-primary">Prijavi se</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>

<%- include(`${partials}/footer`); -%>
