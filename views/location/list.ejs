<% const title = 'Lokacije' %> <%- include(`${partials}/header`, { title }); -%>
<%- include(`${partials}/messages`) -%>

<h1 class="title"><%= title %></h1>
<p class="subtitle">Vse lokacije v sistemu</p>

<table class="table is-fullwidth is-hoverable">
  <thead>
    <tr>
      <th>UUID</th>
      <th>Ime</th>
      <th>Lokacija</th>
      <th>Brisanje</th>
    </tr>
  </thead>
  <tbody>
    <% locations.forEach(location => { %>
    <tr>
      <td><%= location.id %></td>
      <td><%= location.name %></td>
      <td>
        <a
          href="https://www.openstreetmap.org/?mlat=<%= location.latitude %>&mlon=<%= location.longitude %>#map=17/<%= location.latitude %>/<%= location.longitude %>"
          target="_blank"
          title="Latitude: <%= location.latitude %>&#10;Longitude: <%= location.longitude %>"
        >
          OpenStreetMap ðŸ”—
        </a>
      </td>
      <td>
        <form action="/admin/locations/delete/<%= location.id %>" method="post">
          <input
            class="button is-danger is-small"
            type="submit"
            onclick="return confirm('Si ziher?')"
            value="IzbriÅ¡i"
          />
        </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

<%- include(`${partials}/footer`); -%>
