{
  "name": "stemplaj-se",
  "version": "1.0.0",
  "main": "app.js",
  "repository": "git@github.com:kozjansko-geekalisce/stemplaj-se.git",
  "author": "mzgajner <mato@zgajner.com>",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@types/express": "^4.17",
    "@types/node": "^16",
    "nodemon": "^2.0",
    "prisma": "^3.15",
    "ts-node": "^10.8",
    "typescript": "^4.7"
  },
  "dependencies": {
    "@prisma/client": "3.15",
    "dotenv": "^16.0",
    "ejs": "^3.1",
    "express": "^5.0.0-beta.1",
    "prettier": "^2.7"
  },
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/app.js",
    "dev": "npx nodemon ./app.ts",
    "format": "npx prettier **/*.ts --write"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "node --loader ts-node/esm"
    }
  },
  "prisma": {
    "seed": "node --loader ts-node/esm prisma/seed.ts"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  }
}
